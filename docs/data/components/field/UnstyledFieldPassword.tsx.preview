<FieldRoot invalid={errors.length > 0}>
  <Field.Label>Password</Field.Label>
  <Input
    type="password"
    value={value}
    onChange={(event) => setValue(event.currentTarget.value)}
  />
  <FieldError forceShow>
    <ul>
      {errors.map((error) => (
        <li key={error}>{error}</li>
      ))}
    </ul>
  </FieldError>
</FieldRoot>