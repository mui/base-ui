<button type="button" onClick={() => setOpen(true)}>
  Open
</button>
{open && (
  <FocusTrap disableEnforceFocus open>
    <Box tabIndex={-1} sx={{ mt: 1, p: 1 }}>
      <label>
        First name: <input type="text" />
      </label>
      <br />
      <button type="button" onClick={() => setOpen(false)}>
        Close
      </button>
    </Box>
  </FocusTrap>
)}