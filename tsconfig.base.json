{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@base-ui-components/react": ["./packages/react/src"],
      "@base-ui-components/react/*": ["./packages/react/src/*"],
      "@mui-internal/api-docs-builder": ["./node_modules/@mui/monorepo/packages/api-docs-builder"],
      "@mui-internal/api-docs-builder/*": [
        "./node_modules/@mui/monorepo/packages/api-docs-builder/*"
      ],
      "docs/*": ["./docs/*"]
    }
  },
  "exclude": ["**/.*/", "**/build", "**/build-tests", "**/node_modules", "docs/export"]
}
